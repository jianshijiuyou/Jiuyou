<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/child_weibo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_main_bg"
    android:orientation="vertical"
    android:padding="5dp"
    android:visibility="gone">

    <info.jiuyou.jiuyou.widget.WeiboTextView
        android:id="@+id/child_tv_content"
        android:textColor="@color/theme_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <info.jiuyou.jiuyou.widget.WeiboNinePhotoLayout
        android:id="@+id/child_nine_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>