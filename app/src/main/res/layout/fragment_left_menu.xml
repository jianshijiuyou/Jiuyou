<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_setting_item_bg"
    android:orientation="vertical">

    <info.jiuyou.wang.widget.RatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/weibo_author_header_background"
        android:theme="?actionBarTheme"
        app:ratio="16:9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/weibo_author_title_height"
            android:layout_gravity="bottom"
            android:background="@color/weibo_author_title_background">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/weibo_author_title_marginLeft"
                android:text="@string/left_menu_title"
                android:textColor="@android:color/white"
                android:textSize="@dimen/weibo_author_title_size" />
        </FrameLayout>
    </info.jiuyou.wang.widget.RatioFrameLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>